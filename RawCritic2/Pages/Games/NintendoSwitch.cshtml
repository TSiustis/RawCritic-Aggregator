    <p>
        <a asp-page="Create">Create New</a>
    </p>
}



<div class="container">

    <div class="col-md-9 right">
        <table class="table">
            <thead>
                <tr>

                    @*<th>
                        @Html.DisplayNameFor(model => model.Game[0].Title)
