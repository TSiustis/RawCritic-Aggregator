                        <li>
                            @Html.DisplayFor(modelItem => item.Developer)
                        </li>
                    </ul>
                }*@

        </div>
    </div>

</div>
<div>
    <ul class="pagination">
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a asp-page="./Index" asp-route-currentpage="@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</div>
